FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

length 20;
radius 0.5;
in_mesh 0.2;

vertices
(
    (#calc "-1.0*$in_mesh"          $in_mesh                              0) // 0
    (#calc "-1.0*$in_mesh"          #calc "-1.0*$in_mesh"                 0) // 1
    ($in_mesh                       #calc "-1.0*$in_mesh"                 0) // 2
    ($in_mesh                       $in_mesh                              0) // 3
    (#calc "-1.0*$radius/sqrt(2.0)" #calc "$radius/sqrt(2.0)"             0) // 4
    (#calc "-1.0*$radius/sqrt(2.0)" #calc "-1.0*$radius/sqrt(2.0)"        0) // 5
    (#calc "$radius/sqrt(2.0)"      #calc "-1.0*$radius/sqrt(2.0)"        0) // 6
    (#calc "$radius/sqrt(2.0)"      #calc "$radius/sqrt(2.0)"             0) // 7
    (#calc "-1.0*$in_mesh"          $in_mesh                        $length) // 8
    (#calc "-1.0*$in_mesh"          #calc "-1.0*$in_mesh"           $length) // 9
    ($in_mesh                       #calc "-1.0*$in_mesh"           $length) // 10
    ($in_mesh                       $in_mesh                        $length) // 11
    (#calc "-1.0*$radius/sqrt(2.0)" #calc "$radius/sqrt(2.0)"       $length) // 12
    (#calc "-1.0*$radius/sqrt(2.0)" #calc "-1.0*$radius/sqrt(2.0)"  $length) // 13
    (#calc "$radius/sqrt(2.0)"      #calc "-1.0*$radius/sqrt(2.0)"  $length) // 14
    (#calc "$radius/sqrt(2.0)"      #calc "$radius/sqrt(2.0)"       $length) // 15
);

blocks
(
    hex (0 1 2 3   8  9 10  11) (10 10 200) simpleGrading (1 1 1)
    hex (0 4 5 1   8  12 13 9 ) (10 10 200) simpleGrading (0.5 1 1)
    hex (1 5 6 2   9  13 14 10) (10 10 200) simpleGrading (0.5 1 1)
    hex (2 6 7 3   10 14 15 11) (10 10 200) simpleGrading (0.5 1 1)
    hex (3 7 4 0   11 15 12 8 ) (10 10 200) simpleGrading (0.5 1 1)
);

edges
(
    arc 4  5  (#calc "-1.0*$radius"  0                          0)
    arc 5  6  (0                    #calc "-1.0*$radius"        0)
    arc 6  7  ($radius              0                           0)
    arc 7  4  (0                    $radius                     0)
    arc 12 13 (#calc "-1.0*$radius" 0                     $length)
    arc 13 14 (0                    #calc "-1.0*$radius"  $length)
    arc 14 15 ($radius              0                     $length)
    arc 15 12 (0                    $radius               $length)
);

defaultPatch
{
    name wall;
    type wall;
}

boundary
(
    inlet
    {
        type patch;
        faces
        (
            (0 1 2 3)
            (0 4 5 1)
            (1 5 6 2)
            (2 6 7 3)
            (3 7 4 0)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (8  9  10 11)
            (8  12 13 9)
            (9  13 14 10)
            (10 14 15 11)
            (11 15 12 8)
        );
    }

);

mergePatchPairs
(
);

